{

  "manifest_version": 2,
  "name": "RageAnalytics",
  "version": "1.0",

  "description": "makes twitch h*cking awesome",

  "icons": {
  "48": "icons/icon-48.png",
  "96": "icons/icon-96.png"
},

  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["socketio.min.js","extension-cs.js"],
      "css": ["animate.css", "rage-styles.css"]
    }
  ],

  "permissions": [
    "https://twitch.tv/",
    "tabs",
    "activeTab"
  ],

  "browser_action":
  {
    "default_icon": "icons/icon-96.png",
    "default_title": "RAGE RAGE BABY",
    "default_popup": "popup.html"
  },

  "background":
  {
    "scripts": ["background-script.js"]
  },

  "web_accessible_resources": [
   "fonts/DrawingBlood.ttf",
   "fonts/Punk.ttf",
   "fonts/Sharrpe.ttf",
   "fonts/TPF.ttf",
   "fonts/youmurdererbb_reg.otf",
   "popup-script.js",
   "popup-styles.css"
 ]

}
